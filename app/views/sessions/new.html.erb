<div class="text-center">
  <h1>ログインページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session) do |f| %>
      
      <div class="mb-3">
        <%= f.email_field :email, class: 'form-control',:placeholder => "Eメールアドレスを入力してください" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, class: 'form-control', :placeholder => "パスワードを入力してください" %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary w-100' %>
    <% end %>

    <%= link_to '新規登録はこちらから', signup_path %>
  </div>
</div>
