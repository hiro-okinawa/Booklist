<div class="text-center">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session) do |f| %>
      
      <div class="mb-3">
        <%= f.email_field :email, class: 'form-control',:placeholder => "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, class: 'form-control', :placeholder => "Enter your password" %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-primary w-100' %>
    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
