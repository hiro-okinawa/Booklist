<div class="row">
  <aside class="col-sm-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
        <% if current_user == @user %>
          <%= link_to "編集", edit_user_path(@user), class: 'btn btn-primary rounded-pill btn-sm' %>
        <% end %>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 350 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-9">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= have_been_read_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(have_been_read_user_path(@user)) %>">読んだ本: <%= @count_have_been_read %>冊</a></li>
      <li class="nav-item"><a href="<%= now_reading_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(now_reading_user_path(@user)) %>">今読んでいる本: <%= @count_now_reading %>冊</a></li>
      <li class="nav-item"><a href="<%= wants_to_read_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(wants_to_read_user_path(@user)) %>">これから読みたい本: <%= @count_wants_to_read %>冊</a></li>
    </ul>
    <table class="table table-striped">
      <tr>
        <th>本名</th>
        <th>著者名</th>
        <th>状態</th>
      </tr>
        
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= book.book_name %>
          </td>
          <td><%= book.author_name %></td>
          <td>
            <%= book.status %>
            <% if current_user == @user %>
              <%= link_to "削除", "/users/#{@user.id}/books/#{book.id}", method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger rounded-pill btn-sm' %>
              <button type="button" class="btn btn-primary rounded-pill btn-sm" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">編集</button>
            <% end %>
          </td>
        </tr>
       
        <div class="modal fade" id="exampleModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">内容編集フォーム</h5></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= form_with(model: book) do |f| %>
                  <div class="mb-3">
                    <%= f.text_field :book_name, class: 'form-control', :placeholder => "本の名前を入力してください", :value => self.book_name %>
                  </div>
                  <div class="mb-3">
                    <%= f.text_field :author_name, class: 'form-control', :placeholder => "著者名を入力してください", :value => self.author_name %>
                  </div>
                  <div class="mb-3">
                    <%= f.select :status, ["読んだ", "今読んでいる", "これから読みたい"], class: 'form-control' %>
                  </div> 
                  
                  <div class="mb-3">
                    <%= f.submit '登録', class: 'btn btn-primary' %>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
       
      <% end %> #ここまで@books.each
    </table>
      <%== pagy_bootstrap_nav(@pagy) %>
  </div>
  <% if current_user == @user %>
    <%= render "form_for_books",user: @user %>
  <% end %>
</div>