<div class="row">
  <div class="col-sm-3">
    <h3>書籍登録フォーム</h3>
    <%= form_with(model: @book) do |f| %>
      <div class="mb-3">
        
        <%= f.text_field :book_name, class: 'form-control', :placeholder => "本の名前を入力してください" %>
      </div>
      <div class="mb-3">
        
        <%= f.text_field :author_name, class: 'form-control', :placeholder => "著者名を入力してください"%>
      </div>
      <div class="mb-3">
        <%= f.select :status, ["読んだ", "今読んでいる", "これから読みたい"], class: 'form-control' %>
      </div> 
      
      <div class="mb-3">
        <%= f.submit '登録', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
